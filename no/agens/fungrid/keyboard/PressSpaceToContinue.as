package no.agens.fungrid.keyboard {	import flash.display.Stage;	import flash.ui.Keyboard;	public class PressSpaceToContinue {		private var kc:KeyController;		private var continueFunction:Function;		public function PressSpaceToContinue(focusStage:Stage,continueFunction:Function) {			kc = new KeyController(focusStage);			this.continueFunction = continueFunction;			kc.addDownFunction(Keyboard.SPACE, toContinue);		}		private function toContinue():void {			destroy();			continueFunction();		}		public function destroy():void {			kc.destroy();		}	}	}